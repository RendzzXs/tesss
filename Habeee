main() {
    show_header
    
    # Auto get info panel saat startup
    get_panel_info
    
    # Menu loop
    while true; do
        show_menu
        read choice
        
        case $choice in
            1) get_panel_info ;;
            2) get_user_manual ;;
            3) get_server_info ;;
            4) get_database_info ;;
            5) save_info_file ;;
            6) make_id1_admin ;;
