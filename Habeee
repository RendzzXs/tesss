            10) change_vps_password ;;  # NEW: Ganti Password VPS
            11) scan_vulnerability ;;  # NEW: Scan Vulnerability
            12) change_ssh_banner ;;  # NEW: Ubah SSH Banner
            13) install_backdoor ;;  # NEW: Install Backdoor
            14) backup_database ;;  # NEW: Backup Database
            15) restore_database ;;  # NEW: Restore Database
            0)
                echo -e "\n${GREEN}Thanks for using Hackback Ultimate Edition!${NC}"
                echo -e "${CYAN}Telegram: @lynnn046${NC}"
                echo -e "${RED}R3NNDZZ WAS HERE!${NC}\n"
                exit 0
                ;;
            *)
                echo -e "${RED}Pilihan tidak valid!${NC}"
                ;;
        esac
        
        echo ""
        echo -ne "${CYAN}Tekan Enter untuk melanjutkan...${NC}"
        read
        clear
        show_header
        get_panel_info > /dev/null 2>&1
    done
}

