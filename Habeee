# ==============================================
# FUNGSI BACKUP DATABASE (MENU 14)
# ==============================================
backup_database() {
    echo -e "\n${GREEN}${BACKUP} ====== BACKUP DATABASE ====== ${BACKUP}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    if [ -n "$DB_HOST" ] && [ -n "$DB_USER" ] && [ -n "$DB_PASS" ] && [ -n "$DB_NAME" ]; then
        BACKUP_FILE="backup_${DB_NAME}_$(date +%Y%m%d_%H%M%S).sql"
        
        echo -e "${YELLOW}‚è≥ Melakukan backup database...${NC}"
        
        # Cek apakah mysqldump tersedia
        if command -v mysqldump >/dev/null 2>&1; then
            mysqldump -h "$DB_HOST" -P "$DB_PORT" -u "$DB_USER" -p"$DB_PASS" "$DB_NAME" > "$BACKUP_FILE" 2>/dev/null
            
            if [ $? -eq 0 ] && [ -s "$BACKUP_FILE" ]; then
                SIZE=$(du -h "$BACKUP_FILE" | cut -f1)
                echo -e "${GREEN}${CHECK} Backup berhasil: $BACKUP_FILE${NC}"
                echo -e "${GREEN}  üì¶ Size: $SIZE${NC}"
            else
                echo -e "${RED}${CROSS} Backup gagal!${NC}"
                rm -f "$BACKUP_FILE"
            fi
        else
            echo -e "${RED}${CROSS} mysqldump tidak ditemukan! Install dengan: apt-get install mysql-client${NC}"
        fi
    else
        echo -e "${RED}${CROSS} Informasi database tidak lengkap! Jalankan GET INFO dulu.${NC}"
    fi
}

# ==============================================
# FUNGSI RESTORE DATABASE (MENU 15)
# ==============================================
restore_database() {
    echo -e "\n${BLUE}${RESTORE} ====== RESTORE DATABASE ====== ${RESTORE}${NC}"
    echo -e "${WHITE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    
    if [ -n "$DB_HOST" ] && [ -n "$DB_USER" ] && [ -n "$DB_PASS" ] && [ -n "$DB_NAME" ]; then
        echo -e "${YELLOW}üìÅ File backup yang tersedia:${NC}"
        ls -la backup_*.sql 2>/dev/null | head -10
        
        if [ $? -ne 0 ]; then
            echo -e "${RED}Tidak ada file backup ditemukan!${NC}"
            return 1
        fi
        
        echo ""
        echo -ne "${CYAN}Masukkan nama file backup (contoh: backup_panel_20250221.sql): ${NC}"
        read RESTORE_FILE
        
        if [ ! -f "$RESTORE_FILE" ]; then
            echo -e "${RED}${CROSS} File tidak ditemukan!${NC}"
            return 1
        fi
        
        echo -e "${YELLOW}‚è≥ Merestore database...${NC}"
        
        # Backup dulu database saat ini
        CURRENT_BACKUP="pre_restore_${DB_NAME}_$(date +%Y%m%d_%H%M%S).sql"
        mysqldump -h "$DB_HOST" -P "$DB_PORT" -u "$DB_USER" -p"$DB_PASS" "$DB_NAME" > "$CURRENT_BACKUP" 2>/dev/null
        echo -e "${GREEN}  ‚úÖ Backup current db: $CURRENT_BACKUP${NC}"
        
        # Restore
        mysql -h "$DB_HOST" -P "$DB_PORT" -u "$DB_USER" -p"$DB_PASS" "$DB_NAME" < "$RESTORE_FILE" 2>/dev/null
        
        if [ $? -eq 0 ]; then
            echo -e "${GREEN}${CHECK} Restore berhasil!${NC}"
        else
            echo -e "${RED}${CROSS} Restore gagal!${NC}"
        fi
    else
        echo -e "${RED}${CROSS} Informasi database tidak lengkap! Jalankan GET INFO dulu.${NC}"
    fi
}

